{{> header/top-header LoggedInUser = LoggedInUser}} {{> vendor/vendor-menu}}
<style>
	.fas{
       cursor: pointer
	}
</style>
<script>
	function deleteMail(id) {
			$.ajax({
				url: '/api/mail/delete/' + id,
				type: 'PUT',
				success: function (result) {
					console.log(result)
				},
				error: function (error) {
					console.log(error);
				}
			});
		window.location.href = '/gtc-mail/inbox';
	}
</script>

<div class="wrapper-content bg-gray">
	<div class="gtc-container">
		<div class="row">
			<div class="col-sm-2">
				{{> vendor/vendor-side-navbar}}
			</div>
			<div class="col-sm-10">
				<div class="ibox">
					<div class="ibox-content">
						<div class="ibox-title">
							<div class="row">
								<div class="col-md-7">
									<h2>{{message.subject}}</h2>
								</div>
								<div class="col-md-5">
									<p class="pull-right">
										<i class="fas fa-trash-alt" onclick="deleteMail({{messageUserId}})"></i>
									</p>
								</div>
							</div>
							<hr/>
						</div>
						<div class="content-body">
							<div class="row">
								<div class="col-md-7">
									From: {{message.fromUser.first_name}}
									<br/> To: me
									<i class="fas fa-caret-down"></i>
								</div>
								<div class="col-md-5">
									<p class="pull-right">
										{{formatTime message.created_on "MMM D, YYYY"}}
									</p>
								</div>
							</div>
							<div class="row justify-content-md-center">
								<div class="col-sm-8" style="padding:20px;">
									<div class="row justify-content-md-center">
										{{{message.message}}}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-7">
									Click here to
									<a href="gtc-mail/compose?id={{message.fromUser.id}}&text={{message.fromUser.first_name}}">Reply</a>
								</div>
							</div>

						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{> footer/bottom-footer}}