									<td><i class="fas fa-check-circle text_green_color">}</i>Cancelled Order</td>
									{{else ifCond this.status "==" ../statusCode.FAILEDORDER}}
									<td><i class="fas fa-check-circle text_green_color"></i>Failed Order</td>
									{{/ifCond}}
									<td>{{this.notification}}</td>
								</tr>
