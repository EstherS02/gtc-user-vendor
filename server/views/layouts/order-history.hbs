<script type="text/javascript"> 
	$(function () {
		$("#from").datepicker();
		$("#to").datepicker();
	});
</script>

{{> header/defaultHeader LoggedInUser = LoggedInUser}} {{> vendor/header}}
   <section class="showing_categ">
	<div class="" >
		<div class="container">
			<div class="row">
				{{> vendor/navbar}}
				<div class="col-md-10" style="background-color: #fff;">
					<h5 style="padding-top: 20px;">Order History</h5>
					<div class="row">
						<div class="col-md-10">
							Date Range <input data-date-format="MMM D, Y" class="vend_edit_lists_buttonstyle" id="from"> to <input data-date-format="MMM D, Y" class="vend_edit_lists_buttonstyle" id="to"> <select class="vend_edit_lists_buttonstyle">
								<option>LAST 30 DAY</option>
							</select> <select class="vend_edit_lists_buttonstyle">
								<option> TYPE </option>
								{{#each marketPlace}}
										<option value = "{{this}}">{{@key}}</option>
										{{/each}}
							</select> <select class="vend_edit_lists_buttonstyle">
								<option >STATUS</option>
								<option> Active</option>
								<option> New Order</option>
								<option> Cancel Order</option>
								<option> Failed Order</option>
							</select> <input type="submit" value="UPDATE" class="vend_edit_lists_update_buttonstyle" style="height: 27px;"/>
						</div>
						<div class="col-md-2">
							<input style="width: 100%;" type="submit" value="ADVANCED" class="vend_edit_lists_buttonstyle float-right" />
						</div>
					</div>
					<div class="row" style="padding-top: 10px">
						<div class="col-md-8">
							
						</div>
						<div class="col-md-4">
							<input type="text" placeholder="Search History" class="vend_edit_lists_searchstyle" /> <select style="width: 35%" class="vend_edit_lists_buttonstyle float-right">
								<option>EXPORT TO</option>
							</select>
						</div>
					</div>
					<div class="row">
						<div class="col-md-6">
							<p class="vend_edit_lists_pstyle">333,333 items total from May 01, 2017 to June 30, 2017</p>
						</div>
						<div class="col-md-6">
							<p class="vend_edit_lists_pstyle float-right">Entries per page: 
								<a href="/order-history?limit=10"> 10</a>
								<a href="/order-history?limit=25"> 25</a>
								<a href="/order-history?limit=100"> 100</a>
								<a href="/order-history?limit=All"> All </a>
							</p>
						</div>
					</div>
					<div class="row">
						<table class="table table-hover">
							<thead>
								<tr>
									<th><input type="checkbox"></th>
									<th>Invoice #</th>
									<th>Vendor</th>
									<th>Type</th>
									<th>Date</th>
									<th>Method</th>
									<th>Status</th>
									<th></th>
									<th>Amount</th>
								</tr>
							</thead>
							<tbody>
							{{#each orderHistory}}
								{{#each this.OrderItems}}
								<tr>
									<td><input type="checkbox"></td>
									<td>{{../invoice_id}}</td>
									<td class="text_blue_color">{{this.Product.Vendor.vendor_name}}</td>
									<td>{{MarketPlaceId  ../../marketPlace this.Product.marketplace_id }}

									</td>
									<td>{{formatTime ../delivered_on "MMM D, Y"}}</td>
									<td>PayPal</td>
									<td class="text_green_color">Complete</td>
									<td class="text_blue_color"><i class="fas fa-credit-card"></i> Request Refund</td>
									<td>${{this.final_price}} CAD</td>
								</tr>
								{{/each}}
							{{/each}}
								
								<tr>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td></td>
									<td class="text_blue_color">Total Transaction</td>
									<td>$11,227.32 CAD</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="row">
						<div class="col-md-6">
							<p class="vend_edit_lists_pstyle">333,333 items total from May 01, 2017 to June 30, 2017</p>
						</div>
						<div class="col-md-6">
							<p class="vend_edit_lists_pstyle float-right">Entries per page: 
								<a href="/order-history?limit=10"> 10</a>
								<a href="/order-history?limit=25"> 25</a>
								<a href="/order-history?limit=100"> 100</a>
								<a href="/order-history?limit=All"> All </a></p>
						</div>
					</div>
				</div>		
			</div>
		</div>
	</div>
</section>
{{> footer/footer}}