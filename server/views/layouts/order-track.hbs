 {{> header/top-header LoggedInUser = LoggedInUser}}{{> vendor/vendor-menu}}

<div class="wrapper-content bg-gray">
	<div class="gtc-container">
		<div class="row">
			<div class="col-sm-2">
				{{> vendor/vendor-side-navbar}}
			</div>
			<div class="col-sm-10">
				<div class="ibox">
					<div class="ibox-content">
						<div class="ibox-title">
							<h2>Track Your Order</h2>
						</div>
						<div> {{orderTrack.OrderItems.[0].Product.[0].ProductMedia.id}} </div>
						<div class="content-body">
							<img src="{{orderTrack.OrderItems.[0].Product.ProductMedia.[0].url}}" alt="iphone" style="width:5%;margin-bottom: 10px;margin-left:16px"
							/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; {{#if orderTrack.cancelled_on}}
							<span class="text_blue_color" style="font-size: 14px; font-weight: bold;">Order has been Cancelled</span>

							{{else if orderTrack.delivered_on}}
							<span class="text_blue_color" style="font-size: 14px; font-weight: bold;">Order has been delivered</span>

							{{else if orderTrack.shipped_on}}
							<span class="text_blue_color" style="font-size: 14px; font-weight: bold;">On the way</span>

							{{else}}
							<span class="text_blue_color" style="font-size: 14px; font-weight: bold;">Not shipped yet</span>
							{{/if}}
							<div class="row">
								<div class="col-md-9">
									<p class="text_blue_color float-right" style="margin: 10px">
										{{orderTrack.shippingAddress.address_line1}} {{orderTrack.shippingAddress.address_line2}},{{orderTrack.shippingAddress.city}}
										, {{orderTrack.shippingAddress.State.name}} ,{{orderTrack.shippingAddress.Country.name}}.
									</p>
								</div>
							</div>
							<div class="row" style="margin-bottom: 10px;">
								<div class="col-md-10">
									<div class="progress">
										{{#if orderTrack.cancelled_on}}
										<div class="progress-bar" style="width:100%; background-color:red"></div>
										{{else if orderTrack.delivered_on}}
										<div class="progress-bar" style="width:100%"></div>
										{{else if orderTrack.shipped_on}}
										<div class="progress-bar" style="width:70%;"></div>
										{{else}}
										<div class="progress-bar" style="width:10%;"></div>
										{{/if}}
									</div>
								</div>
							</div>
							<div class="row" style="font-size: 11px;">
								<div class="col-md-10">
									<div class="row">
										<div class="col-md-2">
											<p>
												<b>Ordered</b>
											</p>
											<p>{{formatTime orderTrack.ordered_date "D MMM"}}</p>
										</div>
										{{#if orderTrack.shipped_on}}
										<div class="col-md-2">
											<p>
												<b>Shipped</b>
											</p>
											<p>{{formatTime orderTrack.shipped_on "D MMM"}}</p>
										</div>
										{{/if}} {{#if orderTrack.cancelled_on}}
										<div class="col-md-8 ">
											<p style="text-align:right !important;">
												<b>Cancelled on {{formatTime orderTrack.cancelled_on "D MMM"}}</b>
											</p>
										</div>
										{{else if orderTrack.delivered_on}}
										<div class="col-md-8 ">
											<p style="text-align:right !important;">
												<b>Delivered on {{formatTime orderTrack.delivered_on "D MMM"}}</b>
											</p>
										</div>
										{{/if}}
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-md-10">
									<div class="row">
										<div class="col-md-6">
										</div>
										{{#if orderTrack.Shipping}}
										<div class="col-md-6">
											<p class="order_track_ship_det">SHIPMENT DETAILS</p>
											{{#if orderTrack.last_updated_on}}
											<p class="vend_edit_lists_textstyle1" style="width: 100%">Last update: {{formatTime orderTrack.last_updated_on "dddd, D MMM"}}</p>
											{{else}}
											<p class="vend_edit_lists_textstyle1" style="width: 100%">Last update: {{formatTime orderTrack.created_on "dddd, D MMM"}}</p>
											{{/if}}
											<div class="row" style="padding: 10px">
												<div class="row">
													{{#if orderTrack.delivered_on}}
													<div class="col-md-3">
														<p style="font-size: 12px;">{{formatTime orderTrack.delivered_on "hh:mma"}}</p>
													</div>
													<div class="col-md-9">
														<p style="font-size: 12px;">Your Package was delivered</p>
													</div>
													{{/if}}
												</div>
												<div class="row">
													<div class="col-md-3"></div>
													<div class="col-md-9">
														<div class="row">
															<div class="col-md-3">
																<p class="">Carrier:</p>
															</div>
															<div class="col-md-9">
																<p class="">{{orderTrack.Shipping.provider_name}}</p>
															</div>
														</div>
														<div class="row">
															<div class="col-md-3">
																<p class="">Tracking#:</p>
															</div>
															<div class="col-md-9">
																<p class="">{{orderTrack.Shipping.tracking_url}}</p>
															</div>
														</div>
														<div class="row">
															<div class="col-md-3">
																<p class=""></p>
															</div>
															<div class="col-md-9">
																<p>
																	<a href="/order-history/{{orderTrack.id}}">
																		<b>View Order Details</b>
																	</a>
																</p>
															</div>
														</div>
													</div>
												</div>
											</div>
										</div>
										{{/if}}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{> footer/bottom-footer}}