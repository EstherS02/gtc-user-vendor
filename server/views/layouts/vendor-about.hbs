 {{> header/defaultHeader LoggedInUser = LoggedInUser}}
<section>
	<div class="banner_bg">
		<!--<div class="edit-banner">
                <span><a href="#"><i class="fa fa-edit"></i> Change Cover</a></span>
            </div>-->
		<div class="container-fluid banner_bg_menu">
			<div class="">
				<div class="row prfl-wt-txt" style="top: -60px;">
					<div class="col-md-2 common_padding1">
						<a class="navbar-brand float-right" href="javascript:void(0)" style="margin-right: 0px;">
							<img src="{{VendorDetail.vendor_profile_pic_url}}" width=154px height=154px />
						</a>
					</div>
					<div class="col-md-6 prf-text">
						<span>{{VendorDetail.vendor_name}}</span>
						<span>
							<!--<a href="#"><i class="fa fa-edit"></i> Edit Profile</a>-->
						</span>
					</div>
				</div>
				<div class="row img-wt-menu" style="top: 10px;">
					<div class="col-md-2">
					</div>
					<div class="col-md-10 common_padding1">
						<nav class="navbar navbar-expand-lg">
							<div class="collapse navbar-collapse" id="navb">
								<!-- Links -->
								{{> vendor/vendor-navbar VendorDetail = VendorDetail}}
								<div class="field-search1 form-inline my-2 my-lg-0">
									<input type="search" placeholder="Search My store">
									<div class="right">

										<button>
											<svg xmlns="http://www.w3.org/2000/svg" width="22.6" height="23.6" viewBox="0 0 22.6 23.6">
												<g fill="none" stroke="currentColor" stroke-width="4" stroke-miterlimit="10">
													<circle cx="9.3" cy="9.3" r="7.3"></circle>
													<path d="M14.2 14.6l6.9 7.6"></path>
												</g>
											</svg>
										</button>
									</div>
								</div>
							</div>
						</nav>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="logged_in_cont">
		<div class="container">
			<div class="row">
				<div class="col-md-2 col-12">
						{{> vendor/vendor-left VendorDetail = VendorDetail}}	
				</div>


				<!-------------------------------- about----------------------------------------------------------------------->
				<div class="col-md-10 col-12 about_bg">
					<h3>ABOUT</h3>

					<div class="row">
						<div class="col-md-7 col-12 about_logo">
							<div class="row pr_ab" style="padding-top: 30px;">
								<div class="col-md-9 col-12">
									<p class="about_head">
										<i class="fas fa-user-circle icon_style_abt"></i> {{follower.count}} FOLLOWERS</p>
									<p class="about_para">Followers you may know
										
										{{#each follower.rows}}
										{{#if this.User.user_pic_url}}
											<img class="about_para_logo" src="{{this.User.user_pic_url}}">
										{{/if}}
										{{/each}}
										
										<a href="">See all</a>
									</p>

									<p class="about_head">
										<i class="fas fa-info-circle icon_style_abt"></i> SNAPSHOT</p>
									<p class="about_para">{{VendorDetail.about}}</p>
								</div>

							</div>

						</div>
						<div class="col-md-5 col-12 about_logo common_padding1">
							<img width="100%" src="../img/location.png" />

						</div>

					</div>
				</div>

			</div>

		</div>
</section>
{{> footer/footer}}