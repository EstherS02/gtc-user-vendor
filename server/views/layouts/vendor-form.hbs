		$('#icon').on('change', function() {
			if (icon.files && icon.files[0]) {
				var reader = new FileReader();
				reader.onload = function(e) {
					var image = new Image();
					image.src = e.target.result;
					image.onload = function() {
						var height = this.height;
						var width = this.width;
						if ((height >= 165 && height<= 175) || (width >= 165 && width<=175)) {
							var temp = $($.parseHTML('<img style="width:200px; height:200px;">')).attr('src', e.target.result);
							$('div.icon').html(temp);
							return true;
						} else {
							$('#icon').attr('src', " ");
							$('#icon').val('')
							alert("Selected image doesn't have valid height and width. Please upload the image of valid size.");
							return false;
						}	
					};
				}
				reader.readAsDataURL(icon.files[0]);
			}
		});

		$('#cover_pic').on('change', function() {
			if (cover_pic.files && cover_pic.files[0]) {
				var reader = new FileReader();
				reader.onload = function(e) {
					var image = new Image();
