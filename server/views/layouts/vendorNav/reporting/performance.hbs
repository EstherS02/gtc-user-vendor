<script>
	$(function () {
		$("#lhs_from, #lhs_to,#rhs_from,#rhs_to").datepicker();
	});
</script>

<script type="text/javascript">
	function onSearch(){
		var from = $('#lhs_from').val();
		var to = $('#lhs_to').val();
		var Cfrom = $('#rhs_from').val();
		var Cto = $('#rhs_to').val();
		var Compare = $('#compare').val();

		location.href = "/reporting/performance?lhs_from=" + from + "&lhs_to=" + to + "&rhs_from=" + Cfrom + "&rhs_to=" + Cto + "&compare=" + Compare;
	}
</script>

