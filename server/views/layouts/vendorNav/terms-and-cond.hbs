{{> header/top-header LoggedInUser = LoggedInUser}} {{> vendor/vendor-menu}}
<script>
    var vendor_id=  {{{DisplayJSON LoggedInUser.Vendor.id}}};

    $(document).ready(function () {
           $("#termsAndCondForm").submit(function(e){
               e.preventDefault();

               let input = $("#termsAndCondForm :input").filter(function (index, element) {
                return $(element).val() != '';
            }).serialize();

        var termsAndCondInput = input +'&vendor_id='+vendor_id+'&status='+1;

            $.ajax({
                type: 'POST',
                url: '/api/terms-and-cond',
                data: termsAndCondInput,
                success: function (data) {
                    console.log("=======================",data);
                },
                error: function(error){
                    console.log("=======================",error);
                }

           });
    });
    });
</script>
<div class="wrapper-content bg-gray">
    <div class="gtc-container">
        <div class="row">
            <div class="col-sm-2">
                {{> vendor/vendor-side-navbar}}
            </div>
            <div class="col-sm-10">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="ibox-title">
                            <h2>Terms & Conditions</h2>
                        </div>
                        <div class="content-body">
                            <p class="re_terms_pa1">Please enter your stores, return policy, shipping policy and terms of use to be displayed on
                                your stores front-end, and during the checkout process for your users.</p>
                            <form id="termsAndCondForm" class="form">
                                <div class="row">
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <p class="re_terms_pa">Terms Of Use</p>
                                            <textarea class="form-control-customized" name="terms_of_use" rows="6"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <p class="re_terms_pa">Return Policy</p>
                                            <textarea class="form-control-customized" name="return_policy" rows="6"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <p class="re_terms_pa">Shipping Policy</p>
                                            <textarea class="form-control-customized" name="shipping_policy" rows="6"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <button type="submit" class="btn btn-primary btn-sm">Submit</button>
                                        <button type="reset" class="btn btn-gray btn-sm">Cancel</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
