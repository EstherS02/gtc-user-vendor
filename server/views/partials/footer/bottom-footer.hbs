		});

		$("#trackOrderSignup").click(function() {
			$('#myModal').modal('show');
		});

		$("#wishlistSignup").click(function() {
			$('#myModal').modal('show');
		});

		$("#shoppingSignup").click(function() {
			$('#myModal').modal('show');
		});
        $("#footerModelbtnLogin").click(function(){
            let url = window.location.pathname + window.location.search;
            if(url != '/'){
            window.location.href = '/login?return_url='+url;
        }else{
            window.location.href = '/login';
        }
        });
	});

    $(window).bind("pageshow", function(event) {
		if (event.originalEvent.persisted) {
			window.location.reload(); 
		}
	});

	function orderTrack() {
		$.ajax({
			type: "GET",
			url: "/api/orders/order-track",
			success: function(result) {
				if(result.orderId){
					location.href = '/order-history/'+result.orderId;
				}else{
					location.href = '/order-track';
				}
			},
			error: function(error) {
				console.log("Error::",error);
			}
		});
	}
</script>
