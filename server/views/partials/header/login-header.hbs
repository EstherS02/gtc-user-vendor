<script src="js/login.js"></script>
<div id="wrapper">
	<div class="header-bg">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<div class="header">
						<nav class="navbar nav-menu navbar-expand-sm navbar-dark">
							<a class="brand-logo" href="/">
								<img src="gtc-assets/img/logo.svg" alt="logo" title="Global Trade Connect">
							</a>
						</nav>
					</div>
				</div>
				<div class="col-md-6">
					<div class="login-panel">
						<form id="loginForm" class="form">
							<div class="row">
								<div class="col-lg-5">
									<div class="form-group m-b-none">
										<label class="login-label">Returning user? Sign in:</label>
										<input type="email" name="vendor_name" class="form-control-customized form-control-sm rounded form-control-border" placeholder="Email" id="loginInputEmail" name="email">
									</div>
								</div>
								<div class="col-lg-5">
									<div class="form-group m-b-none">
										<label class="login-label">Password | <a href="/user/forgot-password" style="color:#fff">Forgot Password?</a>
									</label>
										<input type="password" class="form-control-customized form-control-sm rounded form-control-border" placeholder="Password" id="loginInputPassword" name="password">
									</div>
								</div>
								<div class="col-lg-2">
									<button type="submit" class="btn btn-sm m-t-md btn-primary" style="margin-top: 30px;" id="btnLogin"><strong>LOG IN</strong></button>
								</div>
								<div class="col-md-12">
									<p class="login-error" id="loginErrorMessage"></p>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
